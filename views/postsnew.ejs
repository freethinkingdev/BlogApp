<% include partials/header %>

<h2>Add new post below....</h2>

<form action="/posts" method="post">
    <div class="form-group">
        <input required type="text" name="postTitle" placeholder="post title" class="form-control"/>
    </div>

    <div class="form-group">
        <textarea required type="text" name="postBody" placeholder="post" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <input required type="text" name="postImage" placeholder="post image url" class="form-control"/>
    </div>

    <div class="form-group">
        <button class="btn btn-primary btn-block">Save post</button>
    </div>
</form>

<% include partials/footer %>