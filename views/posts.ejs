    <% postArray.forEach(function(post){ %>
<div class="ui  text container segment">
    <div class="ui huge header">
        <a href="/posts/<%= post.id %>"><%= post.title.substring(0, 20) %>...</a>
    </div>
    <div class="ui to pattached segement">
        <div class="ui divided items">

            <div class="item">

                <div class="image">
                    <img height="250" width="250" class="ui centered medium bordered image rounded"
                         title="<%= post.title %>"
                         alt="<%= post.title %>"
                         src="<%= post.image %>"/>
                </div>

                <div class="content">
                    <div class="description"><%= post.body.substring(0, 50) %>...</div>
                    <div class="meta"><em>Posted: <%= post.created.toDateString() %></em></div>
                </div>

            </div>

        </div>


    </div>
    </div>
<% }) %>
<div class="ui padded text container">
    <a class="ui fluid primary animated fade button" href="/posts/new">
        <div class="visible content">Create new post</div>
        <div class="hidden content">
            <i class="fa fa-save" aria-hidden="true"></i>
        </div>
    </a>
</div>



